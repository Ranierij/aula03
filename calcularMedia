public class CalculadoraMedia {
    public static void main(String[] args) {
        double nota1 = 7.5; // Exemplo de nota do primeiro bimestre
        double nota2 = 8.0; // Exemplo de nota do segundo bimestre
        double nota3 = 6.5; // Exemplo de nota do terceiro bimestre
        double nota4 = 9.0; // Exemplo de nota do quarto bimestre
        
        double media = calculaMedia(nota1, nota2, nota3, nota4);
        
        System.out.println("A média das notas bimestrais é: " + media);
    }
    
    public static double calculaMedia(double nota1, double nota2, double nota3, double nota4) {
        double media = (nota1 + nota2 + nota3 + nota4) / 4.0;
        return media;
    }
}
